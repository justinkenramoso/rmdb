<div class="col">
  <div
    class="card location-card zoom-on-hover"
    data-location-id="{{this.id}}"
    data-location-name="{{this.name}}"
    data-location-type="{{this.type}}"
    data-location-dimension="{{this.dimension}}"
    data-location-residents="{{this.residents}}"
    onclick="{displayLocation(this)}"
  >
    <div class="card-header location-header">
      {{this.name}}
    </div>
    <div class="card-body location-body">
      <div class="row">
        <div class="col-6 text-end">
          Type
          <i class="fa-solid fa-circle-question"></i>
        </div>
        <div class="col-6" style="color: #FDFF00">
          {{this.type}}
        </div>
        <div class="col-6 text-end">
          Dimension
          <i class="fa-solid fa-atom"></i>
        </div>
        <div class="col-6" style="color: #38E54D">
          {{this.dimension}}
        </div>
      </div>

    </div>
  </div>
</div>